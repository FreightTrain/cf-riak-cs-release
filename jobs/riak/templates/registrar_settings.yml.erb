<% if properties.riak_cs.register_route %>
message_bus_servers:
<% p('nats.machines').each do |ip| %>
    - host: <%= ip %>:<%= p('nats.port') %>
      user: <%= p('nats.user') %>
      password: <%= p('nats.password') %>
<% end %>
external_host: <%= p('external_riakcs_host') %>
external_ip: 127.0.0.1
port: <%= p('riak_cs.port') %>
health_checker:
  name: riak-cs-cluster
  interval_in_seconds: 10
<% else %>
# The route registration process is disabled because properties.riak_cs.register_route is set to false
<% end %>
